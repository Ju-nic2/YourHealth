<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="272dp"
            android:layout_height="205dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-2dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="Your Health"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3FC8BB"
            android:textColorHighlight="#FFFFFF"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="142dp"
            android:layout_height="205dp"
            tools:srcCompat="@drawable/sample" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="-34dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="기본 정보를 입력해주세요"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/newEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/newPass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newEmail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/newPassCheck"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPass"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="비밀번호확인"
            android:inputType="textPassword" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|clip_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/buttonchange"
            android:clickable="false"
            android:enabled="false"
            android:fontFamily="@font/custom"
            android:text="다음"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>