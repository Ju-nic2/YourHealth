<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="272dp"
            android:layout_height="205dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-2dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="Your Health"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3FC8BB"
            android:textColorHighlight="#FFFFFF"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="142dp"
            android:layout_height="205dp"
            app:srcCompat="@drawable/sample" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="당신의 운동을 알려주세요"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/idPasswordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/emailText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:ems="10"
            android:inputType="textPassword" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="354dp"
            android:layout_height="64dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:fontFamily="@font/custom"
            android:shadowColor="#E16B6B"
            android:text="로그인"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/chooseView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/findPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contextClickable="true"
                android:gravity="center"
                android:text="비밀번호찾기"
                android:textColor="#070505"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newMember"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contextClickable="true"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="#070505"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

