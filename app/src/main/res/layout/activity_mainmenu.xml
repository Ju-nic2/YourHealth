<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainmenuActivity">

    <RelativeLayout
        android:id="@+id/mianframe"
        android:layout_width="match_parent"
        android:layout_height="239dp">

        <TextView
            android:id="@+id/mainmenulogo"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="Your Health"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3FC8BB"
            android:textColorHighlight="#FFFFFF"
            android:textSize="39sp" />

        <ImageView
            android:id="@+id/mainPhoto"
            android:layout_width="142dp"
            android:layout_height="205dp"
            android:src= "@drawable/icon_logo" />

        <TextView
            android:id="@+id/mainname"
            android:layout_width="216dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="141dp"
            android:layout_marginTop="91dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mainpurpose"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="141dp"
            android:layout_marginTop="154dp"
            android:layout_marginBottom="284dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="메뉴를 선택해 주세요"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/todaymenubutton"
                android:layout_width="149dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:clickable="true"
                android:scrollbarTrackVertical="?attr/actionModePasteDrawable"
                android:src="@drawable/icon_today"
                app:civ_border_color="#FF111111"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#009688" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="오늘의 운동"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/snsmenubutton"
                android:layout_width="149dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:clickable="true"
                android:scrollbarTrackVertical="?attr/actionModePasteDrawable"
                android:src="@drawable/icon_sns"
                app:civ_border_color="#FF111111"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#009688" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="운동마당"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/storagemenubutton"
                android:layout_width="149dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:clickable="true"
                android:scrollbarTrackVertical="?attr/actionModePasteDrawable"
                android:src="@drawable/icon_storage"
                app:civ_border_color="#FF111111"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#009688" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="루틴 저장소"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/diarymenubutton"
                android:layout_width="149dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:clickable="true"
                android:scrollbarTrackVertical="?attr/actionModePasteDrawable"
                android:src="@drawable/diary_icon"
                app:civ_border_color="#FF111111"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#009688" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="다이어리"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>