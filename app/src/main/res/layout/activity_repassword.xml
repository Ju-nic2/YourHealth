<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="272dp"
            android:layout_height="205dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-2dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="Your Health"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3FC8BB"
            android:textColorHighlight="#FFFFFF"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="142dp"
            android:layout_height="205dp"
            tools:srcCompat="@drawable/sample" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="-34dp"
            android:fontFamily="@font/custom"
            android:gravity="center"
            android:text="비밀번호 재설정 "
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/newEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:ems="10"
            android:hint="가입하신 이메일을 입력해주세요"
            android:inputType="textEmailAddress" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|clip_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/buttonchange"
            android:clickable="false"
            android:enabled="false"
            android:fontFamily="@font/custom"
            android:text="재설정 이메일 보내기"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>